{
  "manifest_version": 3,
  "name": "Tweet Replies Saver",
  "version": "0.2.0",
  "description": "Scrape and download replies of a tweet as JSON.",
  "permissions": ["downloads", "storage", "tabs"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_title": "Replies Saver",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*/status/*",
        "https://x.com/*/status/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
